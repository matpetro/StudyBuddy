<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PopupPermissionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Study Buddy Needs Access to Pop ups to Block Apps"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/black"/>

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allow"
        android:textColor="@color/lblue"
        android:background="@null"
        android:textStyle="bold"
        android:onClick="checkPopupPermission"
        android:layout_gravity="center"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/popupPermDone"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@color/lblue"
        android:background="@null"
        android:textStyle="bold"
        android:onClick="nextScreenAction"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:textSize="20sp"/>


</LinearLayout>